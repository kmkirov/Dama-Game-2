<LinearLayout
     xmlns:android = "http://schemas.android.com/apk/res/android"
     xmlns:tools = "http://schemas.android.com/tools"
     tools:context = "com.example.dama.MainActivity"
     android:layout_width = "match_parent"
     android:layout_height = "match_parent"
     android:orientation = "vertical"
     
      >
<RelativeLayout
   
    android:layout_width = "@dimen/linearlayout_width"
    android:layout_height = "@dimen/linearlayout_height"
    android:layout_gravity = "center_horizontal"
    android:background = "@drawable/dama">
       
     <!-- първи ред -->
     <RelativeLayout 
       		android:id = "@+id/purvo"
       		style = "@style/row_style">
	       <TextView 
	            android:id = "@+id/textview_rowone_left"
	            style = "@style/element.textview_first_element"
	        />
	        <TextView 
	            android:id = "@+id/textview_rowone_center"
	            style = "@style/element.textview_center_element"
	         />
	         <TextView 
					android:id = "@+id/textview_rowone_right"
	            	style = "@style/element.textview_end_element"
	         />
     </RelativeLayout>
        
     <!-- среден ред -->
     <LinearLayout 
            style = "@style/row_style"
            android:layout_centerInParent = "true"
            android:id = "@+id/vtoro"
            android:orientation = "horizontal">
   		   
       		<TextView 
            	android:id = "@+id/d1"
             	style = "@style/element.textview_first_element"
             />
        	<TextView 
            	android:id = "@+id/d2"
            	style = "@style/element"
            	android:layout_marginLeft = "34dp"
            />
         	<TextView 
           		android:id = "@+id/d3"
           		style = "@style/element"
           		android:layout_marginLeft = "34dp"
           	/>
           	<TextView 
            	android:id = "@+id/d4"
            	style = "@style/element"
            	android:layout_marginLeft = "164dp"
            />
         	<TextView 
           		android:id = "@+id/d5"
           		style = "@style/element"
           		android:layout_marginLeft = "34dp"
            />
         	<TextView 
           		android:id = "@+id/d6"
           		style = "@style/element"
           		android:layout_marginLeft = "34dp"
            />
     </LinearLayout>
       
  	 <!-- последен ред -->
     <RelativeLayout 
           android:layout_alignParentBottom = "true"
           android:id = "@+id/tri"
           style = "@style/row_style">
   		   
	       <TextView 
	            android:id = "@+id/textview_rowthree_left"
	            style = "@style/element.textview_first_element"
	       />
	       <TextView 
	            android:id = "@+id/textview_rowthree_center"
	            style = "@style/element.textview_center_element"
	       />
          <TextView 
            	android:id = "@+id/textview_rowthree_right"
            	style = "@style/element.textview_end_element"
           />
     </RelativeLayout>
        <!-- втори ред -->
     <RelativeLayout 
           android:id = "@+id/purvi_vutreshen"
           android:layout_below = "@id/purvo"
           android:layout_marginTop = "35dp"
           style = "@style/row_style">
   		   
	       <TextView 
	            android:id = "@+id/textview_rowtwo_left1"
	            style = "@style/element"
	            android:layout_marginLeft = "84dp"
	       />
	        <TextView 
	           	android:id = "@+id/textview_rowtwo_center1"
	           	style = "@style/element.textview_center_element"
	        />
         	<TextView 
           		android:id = "@+id/textview_rowtwo_right1"
           		style = "@style/element"
           		android:layout_marginLeft = "462dp"
            />
    </RelativeLayout>   
 	<!-- трети ред -->
    <RelativeLayout 
           android:id = "@+id/vtori_vutreshen"
           android:layout_below = "@id/purvi_vutreshen"
           android:layout_marginTop = "30dp"
       		style = "@style/row_style">
	       <TextView 
	            android:id = "@+id/textview_rowtwo_left11"
	            style = "@style/element"
	            android:layout_marginLeft = "170dp"
	       />
	       <TextView 
	            android:id = "@+id/textview_rowtwo_center11"
	            style = "@style/element.textview_center_element"
	       />
	       <TextView 
	            android:id = "@+id/textview_rowtwo_right11"
	            style = "@style/element"
	            android:layout_marginLeft = "380dp"
	       />
     </RelativeLayout>       
        
     <!-- първи ред след средата -->
     <RelativeLayout 
           android:id = "@+id/treti_vutreshen"
           android:layout_below = "@id/vtoro"
           android:layout_marginTop = "58dp"
           style = "@style/row_style">
   		   
	       <TextView 
	            	android:id = "@+id/textview_rowtwo_left21"
	            	style = "@style/element"
	            	android:layout_marginLeft = "170dp"
	           />
	        <TextView 
	            	android:id = "@+id/textview_rowtwo_center21"
	            	style = "@style/element.textview_center_element"
	           />
	         <TextView 
	            	android:id = "@+id/textview_rowtwo_right21"
	           		style = "@style/element"
	           		android:layout_marginLeft = "380dp"
	           />
     </RelativeLayout>   
 	 <!-- втори ред след средата -->
	 <RelativeLayout 
	           android:id = "@+id/chetvurti_vutreshen"
	           android:layout_below = "@id/treti_vutreshen"
	           android:layout_marginTop = "30dp"
	           style = "@style/row_style">
	         
		       <TextView 
		            android:id = "@+id/textview_rowtwo_left22"
		            style = "@style/element"
	           		android:layout_marginLeft = "84dp"
		       />
		       <TextView 
		            android:id = "@+id/textview_rowtwo_center22"
		            style = "@style/element.textview_center_element"
		       />
		       <TextView 
		            android:id = "@+id/textview_rowtwo_right22"
		            style = "@style/element"
           			android:layout_marginLeft = "462dp"
		       />
	  </RelativeLayout> 
	
	
</RelativeLayout>
	

	<TextView 
	    android:layout_marginTop="100dp"
		 android:id = "@+id/textview_current_player"
		 android:layout_width = "wrap_content"
         android:layout_height = "wrap_content"
         android:textSize="17sp"
         android:text = "current_player is : kirakis"
	/>
	<LinearLayout 
	    android:layout_marginTop="30dp"
	    android:layout_width = "match_parent"
     	android:layout_height = "match_parent"
     	android:orientation = "horizontal"
	    >
	    <TextView 
		 android:id = "@+id/textview_avalable_white"
		 android:layout_width = "wrap_content"
         android:layout_height = "wrap_content"
         android:textSize="17sp"
         android:text = "whiete : 10"
	/>
	    <TextView 
		 android:id = "@+id/textview_avalible_red"
		 android:layout_width = "wrap_content"
         android:layout_height = "wrap_content"
    	 android:textSize="17sp"
         android:text = "red : 10"
	/>
	    
	    
	</LinearLayout>
	
	
</LinearLayout>